---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const {
  pubDate,
  updatedDate,
  title,
  description,
  heroImage,
  tags, // ‚Üê ADD THIS
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="min-h-screen">
      <div class="mx-auto max-w-5xl px-4 md:px-6 lg:px-8 pt-8">
        <nav class="text-sm breadcrumbs text-[var(--highlight)]/70">
          <ul>
            <li>
              <a
                href="/"
                class="flex items-center gap-2 hover:text-[var(--highlight)] transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                  ></path>
                  <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Home
              </a>
            </li>
            <li class="truncate max-w-[200px] md:max-w-none">{title}</li>
          </ul>
        </nav>
      </div>
      <article class="mx-auto max-w-5xl px-4 md:px-6 lg:px-8 py-10">
        <div class="card bg-white shadow-xl">
          {
            heroImage && (
              <figure class="max-h-[420px] overflow-hidden">
                <Image
                  width={1020}
                  height={510}
                  src={heroImage}
                  alt=""
                  class="w-full object-cover"
                />
              </figure>
            )
          }
          <div class="card-body space-y-6">
            <div class="space-y-2">
              <!-- META -->
              <div class="text-sm opacity-70 space-y-1">
                <FormattedDate date={pubDate} />
                {
                  updatedDate && (
                    <div>
                      Last updated on <FormattedDate date={updatedDate} />
                    </div>
                  )
                }
              </div>
              <!-- TAG CHIPS (Portfolio style) -->
              {
                tags && tags.length > 0 && (
                  <div class="mt-4 flex flex-wrap gap-2">
                    {tags.map((tag) => (
                      <span
                        class="inline-flex items-center rounded-full
                             border border-[var(--highlight)]/80
                             bg-white/5 px-3 py-1
                             text-[0.65rem] uppercase tracking-[0.18em]
                             text-[var(--highlight)]"
                      >
                        {tag}
                      </span>
                    ))}
                  </div>
                )
              }
              <!-- TITLE + DESCRIPTION -->
              <h1
                class="card-title text-3xl md:text-4xl font-extrabold tracking-tight"
              >
                {title}
              </h1>

              <h2 class="card-title text-xl font-normal tracking-tight">
                {description}
              </h2>
            </div>

            <hr class="border-base-300" />

            <div
              class="prose prose-sm sm:prose lg:prose-lg max-w-[88ch] mx-auto"
            >
              <slot />
            </div>
          </div>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
