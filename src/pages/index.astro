---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import DicebearThumbnail from "../components/DicebearThumbnail.astro";
import { getReadingTime } from "../reading-time";

const rawPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// attach a readTime field to each post's data
const posts = rawPosts.map((post) => ({
  ...post,
  data: {
    ...post.data,
    readTime: getReadingTime(post.body || ""),
  },
}));

const allTags = Array.from(
  new Set(posts.flatMap((post) => post.data.tags ?? [])),
).sort((a, b) => a.localeCompare(b));

const [featuredPost, ...remainingPosts] = posts;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body
    class="min-h-screen flex flex-col bg-[var(--background)] text-[var(--foreground)]"
  >
    <Header />

    <main
      class="px-4 md:px-6 lg:px-8 py-20 flex-grow max-w-7xl mx-auto !max-w-[100rem]"
    >
      <div class="mx-auto max-w-6xl">
        <!-- FEATURED ARTICLE SECTION -->
        <section class="mb-24 mt-12">
          <div class="grid gap-12 items-center md:grid-cols-2">
            <a
              href={`/projects/${featuredPost.id}/`}
              class="group relative block w-full aspect-[16/10] overflow-hidden rounded-3xl bg-zinc-100 shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-1"
            >
              {
                featuredPost.data.heroImage ? (
                  <Image
                    src={featuredPost.data.heroImage}
                    width={1200}
                    height={750}
                    alt=""
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                ) : (
                  <DicebearThumbnail seed={featuredPost.data.title} />
                )
              }
            </a>

            <div class="flex flex-col gap-6">
              <div class="flex items-center gap-4">
                <span
                  class="text-xs font-bold uppercase tracking-widest text-[#6366f1]"
                  >Featured</span
                >
                {
                  featuredPost.data.tags && featuredPost.data.tags[0] && (
                    <span class="rounded-full bg-[#6366f1] px-3 py-1 text-[10px] font-bold uppercase tracking-wider text-white">
                      {featuredPost.data.tags[0]}
                    </span>
                  )
                }
              </div>

              <h1
                class="text-4xl md:text-5xl font-serif font-bold tracking-tight text-black leading-tight"
              >
                <a
                  href={`/projects/${featuredPost.id}/`}
                  class="text-black hover:text-[#6366f1] transition-colors line-clamp-3"
                >
                  {featuredPost.data.title}
                </a>
              </h1>

              <p class="text-lg text-zinc-600 line-clamp-4 leading-relaxed">
                {featuredPost.data.description}
              </p>

              <div class="mt-4 flex items-center gap-3">
                <div
                  class="h-10 w-10 overflow-hidden rounded-full ring-2 ring-white shadow-sm bg-zinc-100 flex items-center justify-center"
                >
                  <span class="text-xs font-bold text-zinc-400">AK</span>
                </div>
                <div class="flex flex-col leading-none">
                  <span class="text-sm font-bold text-zinc-900">Anna Kahrs</span
                  >
                  <div class="flex items-center gap-2 mt-1">
                    <span class="text-xs text-zinc-500">Lead UX Designer</span>
                    <span class="text-zinc-300">•</span>
                    <span class="text-xs text-zinc-500">
                      {
                        featuredPost.data.pubDate.toLocaleDateString("en-US", {
                          month: "long",
                          day: "numeric",
                          year: "numeric",
                        })
                      }
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- BROWSE OUR BLOG (TAG FILTERS) -->
        <section class="mb-12 border-t border-zinc-100 pt-12">
          <div class="flex flex-col gap-8">
            <div class="flex flex-row justify-between items-start gap-4">
              <div class="flex flex-col gap-2">
                <span
                  class="text-[10px] font-sans font-bold uppercase tracking-widest text-[#6366f1] leading-none"
                >
                  What’s been on my mind
                </span>
                <p class="text-sm text-zinc-500">
                  Writing across design, systems, and everything in between.
                </p>
              </div>
              <div class="hidden md:flex items-start pt-0">
                <div class="relative">
                  <input
                    type="text"
                    id="search-input"
                    placeholder="Search Blog"
                    class="w-64 rounded-full border border-zinc-200 bg-zinc-50 px-4 py-2 text-xs focus:outline-none focus:ring-1 focus:ring-[#6366f1] focus:border-[#6366f1] leading-none"
                  />
                  <svg
                    class="absolute right-3 top-[10px] h-3.5 w-3.5 text-zinc-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    ></path></svg
                  >
                </div>
              </div>
            </div>

            <div class="flex flex-wrap items-center justify-between gap-6">
              <div class="flex flex-wrap gap-2">
                <button
                  type="button"
                  data-tag-filter="all"
                  class="inline-flex items-center rounded-full border border-transparent bg-[#6366f1] px-4 py-2 text-xs font-bold uppercase tracking-widest text-white transition-all hover:bg-[#4f46e5]"
                >
                  Recent Articles
                </button>

                {
                  allTags.map((tag) => (
                    <button
                      type="button"
                      data-tag-filter={tag}
                      class="inline-flex items-center rounded-full border border-zinc-200 bg-white px-4 py-2 text-xs font-bold uppercase tracking-widest text-zinc-600 transition-all hover:bg-zinc-50 hover:border-zinc-300"
                    >
                      {tag}
                    </button>
                  ))
                }
              </div>
            </div>
          </div>
        </section>

        <!-- GRID OF ALL POSTS — 3-up layout -->
        <section class="mt-8">
          <ul class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {
              remainingPosts.map((post) => (
                <li
                  class="list-none h-full post-item"
                  data-post-tags={
                    post.data.tags ? post.data.tags.join(",") : ""
                  }
                  data-post-title={post.data.title.toLowerCase()}
                  data-post-description={post.data.description.toLowerCase()}
                >
                  <a href={`/projects/${post.id}/`} class="group block h-full">
                    <div
                      class="h-full flex flex-col 
                        rounded-[2rem] overflow-hidden
                        bg-white shadow-md border border-[var(--highlight)]/50
                        transition-all duration-200
                        group-hover:shadow-xl group-hover:-translate-y-1"
                    >
                      {/* Thumbnail */}
                      <figure class="aspect-[3/2] overflow-hidden">
                        {post.data.heroImage ? (
                          <Image
                            src={post.data.heroImage}
                            width={720}
                            height={480}
                            alt=""
                            class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.03]"
                          />
                        ) : (
                          <DicebearThumbnail seed={post.data.title} />
                        )}
                      </figure>

                      {/* Text */}
                      <div class="px-6 py-6 flex flex-col gap-3">
                        {/* DATE + READ TIME */}
                        <div class="flex items-center justify-between text-xs text-zinc-600">
                          <span>
                            {post.data.pubDate.toLocaleDateString("en-US", {
                              month: "long",
                              year: "numeric",
                            })}
                          </span>

                          <span>{post.data.readTime}</span>
                        </div>

                        {/* TAGS — show only the first one */}
                        {post.data.tags && post.data.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2">
                            <span
                              class="text-[0.65rem] uppercase tracking-wider
                                px-3 py-1 rounded-full
                                bg-[var(--card-bg)]/30 text-[var(--highlight)]
                                border border-[var(--highlight)]/40"
                            >
                              {post.data.tags[0]}
                            </span>
                          </div>
                        )}

                        {/* TITLE */}
                        <h4
                          class="font-serif text-[1.35rem] leading-snug
                            text-[var(--highlight)] 
                            group-hover:text-white transition"
                        >
                          {post.data.title}
                        </h4>

                        {/* AUTHOR + TITLE AS A TIGHT STACK */}
                        <div class="flex flex-col gap-[2px]">
                          <p class="text-sm text-zinc-900/70">By Anna Kahrs</p>
                          <p class="text-xs text-zinc-900/50">
                            Lead UX Designer
                          </p>
                        </div>
                      </div>
                    </div>
                  </a>
                </li>
              ))
            }
          </ul>
        </section>
      </div>
    </main>

    <Footer />

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const filterButtons = document.querySelectorAll("[data-tag-filter]");
        const searchInput = document.getElementById(
          "search-input",
        ) as HTMLInputElement;
        const posts = document.querySelectorAll(".post-item");

        let currentTag = "all";
        let searchQuery = "";

        if (!filterButtons.length || !posts.length) return;

        function updateFilters() {
          posts.forEach((post: any) => {
            const tags = (post.getAttribute("data-post-tags") || "")
              .split(",")
              .map((t) => t.trim().toLowerCase());
            const title = post.getAttribute("data-post-title") || "";
            const description =
              post.getAttribute("data-post-description") || "";

            const matchesTag =
              currentTag === "all" || tags.includes(currentTag.toLowerCase());
            const matchesSearch =
              !searchQuery ||
              title.includes(searchQuery) ||
              description.includes(searchQuery);

            post.classList.toggle("hidden", !(matchesTag && matchesSearch));
          });
        }

        function setActiveButton(activeButton) {
          filterButtons.forEach((button) => {
            const isActive = button === activeButton;
            if (isActive) {
              button.classList.add(
                "bg-[#6366f1]",
                "text-white",
                "border-transparent",
              );
              button.classList.remove(
                "bg-white",
                "text-zinc-600",
                "border-zinc-200",
              );
            } else {
              button.classList.remove(
                "bg-[#6366f1]",
                "text-white",
                "border-transparent",
              );
              button.classList.add(
                "bg-white",
                "text-zinc-600",
                "border-zinc-200",
              );
            }
          });
        }

        filterButtons.forEach((button: any) => {
          button.addEventListener("click", () => {
            currentTag = button.dataset.tagFilter;
            setActiveButton(button);
            updateFilters();
          });
        });

        if (searchInput) {
          searchInput.addEventListener("input", (e: any) => {
            searchQuery = e.target.value.toLowerCase().trim();
            updateFilters();
          });
        }

        // Initialize
        const allButton = document.querySelector('[data-tag-filter="all"]');
        if (allButton) setActiveButton(allButton);
      });
    </script>
  </body>
</html>
